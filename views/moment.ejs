<style>

body{
    font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.back-to-top {
    cursor: pointer;
    position: fixed;
    bottom: 20px;
    right: 20px;
    display:none;
}

.btn{
	background-color: white; 
    color: black; 
    border: 2px solid MediumAquaMarine;
}

.btn:hover {
    background-color: MediumAquaMarine;
    color: white;
}


@media (min-width: 768px) {

  body {
      overflow: hidden;
  }
  
  #wrapper {
      min-height: 100%;
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      bottom:0;
      display: inline-block;
  }
  #main-wrapper {
      height: 100%;
      overflow-y: auto;
      padding: 50px 0 0px 0;
      border-left: 1px solid gray;
      background-image: url("/images/moments/moments_bg.jpg");
      background-position: center;
      background-repeat: no-repeat; 
  }
  #main {
  	  /*background-color:#e9eaed;*/
      position: relative;
      height: 100%;
      padding: 20px 20px;
      overflow-y: auto;
  }


  .footer {
      bottom:0;
      height:50px;
  	  position:fixed;
      padding: 25px 0;
  	  text-align: center;
  	  width:100%;
  	  background-color: white;
  }
}

.well i {
    font-size:20px;
    color:#c0c0c0;
}

textarea{
  resize:none;
}

.status-box i{
  font-size: 25px;
}

.status-box-header{
  background-color: #f7ba34;
  padding: 15px 20px;
  border:none;
  margin:0;
}

.status-box-header h3{
	color: white;
}

.blog-grid{
	overflow:hidden;
}

.post{
	padding-top:10px;
	margin-top:5px;
	margin-bottom:15px;
}

.post-text{
	background:WhiteSmoke;
	clear:both;
	display:table;
	width:100%
	padding-top:10px;
	padding: 20px;
	color: #5B5B5B;
	font-family: 'Open Sans',sans-serif !important;
	font-size:14px;
	line-height: 28px;
  font-weight: 400;
}


.post-title{
	font-size:18px;
	font-family: "Dosis",arial !important;
	margin-top:5px;
	margin-bottom:0px;
	height:20px;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	text-transform:uppercase;
	line-height:20px;
	font-weight:500;
	letter-spacing: 1px;
    color: #6B6B6B;
    box-sizing: border-box;
    -webkit-margin-before: 0.83em;
    -webkit-margin-after: 0.83em;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    display: block;
    text-decoration: none;
}

.post-meta{
	margin-top: 6px;
    margin-bottom: 15px;
    color: #ADADAD;
    text-transform: uppercase;
    font-size: 12px;
    display: block;
    font-family: 'Open Sans',sans-serif;
    line-height: 28px;
    font-weight: 400;
}

.post-meta a{
	color: #6A6A6A;
	text-decoration: none;
	text-transform: uppercase;
    font-size: 12px;
    line-height: 28px;
    font-weight: 400;
}

.post .post-meta a::after {
    content: "•";
    display: inline-block;
    padding-left: 10px;
    padding-right: 7px;
    color: #C1C1C1;
}

.post .post-meta a.comments::before {
    content: "•";
    display: inline-block;
    padding-left: 0;
    padding-right: 10px;
    color: #C1C1C1;
}

.post .post-meta a.comments::after{
	content: "" !important;
}

figure img{
	display:inline-block;
	width:100%;
}

::selection {
    color: #fff;
    background: #7F8C8D;
}

.post-heart{
	color:LightCoral;
}

.post-comment{
	color:LightBlue;
}

#loadMore {
    padding: 10px;
    text-align: center;
    background-color: #33739E;
    color: #fff;
    border-width: 0 1px 1px 0;
    border-style: solid;
    border-color: #fff;
    box-shadow: 0 1px 1px #ccc;
    transition: all 600ms ease-in-out;
    -webkit-transition: all 600ms ease-in-out;
    -moz-transition: all 600ms ease-in-out;
    -o-transition: all 600ms ease-in-out;
}
#loadMore:hover {
    background-color: #fff;
    color: #33739E;
}

.more-moments a, .more-moments a:visited {
    color: #33739E;
    text-decoration: none;
    display: block;
    margin: 10px 0;
}

.more-moments a:hover {
    text-decoration: none;
}

.post-button button{
	border: 1px solid MediumAquaMarine;
}

.moment-input-group{
	width:100%;
}



footer {
  padding: 25px 0;
  text-align: center;
  width:100%;
}

footer span.copyright {
  line-height: 40px;
  text-transform: uppercase;
  text-transform: none;
}

footer ul.quicklinks {
  margin-bottom: 0;
  line-height: 40px;
  text-transform: uppercase;
  text-transform: none;
}


ul.list-inline {
  margin-bottom: 30px;
  margin-top: 0;
}

ul.list-inline li a{
    color:LightSalmon;
}

ul.social-buttons {
  margin-bottom: 0;
}
ul.social-buttons li a {
  display: block;
  background-color: #222222;
  height: 40px;
  width: 40px;
  border-radius: 100%;
  font-size: 20px;
  line-height: 40px;
  color: white;
  outline: none;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  transition: all 0.3s;
}
ul.social-buttons li a:hover,
ul.social-buttons li a:focus,
ul.social-buttons li a:active {
  background-color: #fed136;
}


	
.status-box{
  margin-top:25px;
  width:100%;
  margin-right:0;
  background-color: #e6e6e6;
}

.status-box i{
  font-size: 25px;
  padding-right: 10px;
}

.form-group input[type=text]{
  box-sizing:border-box;
  width:100%;
  padding:8px 12px 12px 12px;
  border: 2px solid LightGray;

}

.form-group select{
  border: 2px solid LightGray;
  box-sizing:border-box;
  height:40px;
  margin:auto;
  width: 100%;
}

.form-group textarea{
  padding:8px 12px;
  resize:none;
  border:outset 2px orange;
  display: block;
  width:100%;
  box-sizing:border-box;
}


#image-preview {
  margin-top:14px;
  width: 100%;
  height: 280px;
  position: relative;
  overflow: hidden;
  background-color: #ffffff;
  color: #ecf0f1;
}
#image-preview input {
  line-height: 200px;
  font-size: 200px;
  position: absolute;
  opacity: 0;
  z-index: 10;
}
#image-preview label {
  position: absolute;
  z-index: 5;
  opacity: 0.8;
  cursor: pointer;
  width: 100px;
  height: 100px;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  background-image: url("/images/acc_mgnt/camera.png");
  background-repeat:no-repeat;
  background-position: center;
  background-size: 75px;
}

.img-border {
    float: none;
    margin: auto;
    border: #c9d7e8 solid 1px;
}

.img-full {
    width: 100%;
}

.moment-text textarea{
  width:100%;
  resize: none;
  background-color: inherit;
  border:none;
  overflow: hidden;
  display: block;
}

</style>
	
</head>

<body>
	 
	<%- include navBar.ejs -%>


	<div id="wrapper">

        <!-- Main Content -->
        <div id="main-wrapper">
            <div id="main">

    				<!-- Begin  Blog List -->
    				<section class="section-blog blog-list blog-grid clearfix bg-gray-light">
      					<div class="container">
        					<div class="row">
                      <div class="col-lg-12">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10">
                                <!-- Facebook like textarea -->
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                  <div class="status-box">
                                    <div class="status-box-header" id="momentInput1">
                                        <h3>What's New</h3>
                                    </div>
                                    <form class="form-horizontal col-lg-12" style="background: inherit;" method="post" action="/users/account/addMoment" enctype='multipart/form-data' id="newMomentForm">
                                        <div class="col-lg-6">
                                            <div id="image-preview">
                                              <label for="image-upload" id="image-label"></label>
                                              <input type="file" name="momentImage" id="image-upload" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <div class="col-lg-12">
                                                  <input type="text" id="newMomentTitle" name="title" placeholder="Title" style="margin-top:14px; ">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-12">
                                                  <textarea class="form-element form-control" id="newMomentText" name="momentText" cols="50" rows="5" placeholder="What's your favorite moment today...?"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-8 col-md-8 col-sm-8">
                                                  <input type="text" id="newLocation" name="location" placeholder="Location">
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-sm-4">
                                                    <select id="newPricacy" name="privacy">
                                                      <option value="1">Public</option>
                                                      <option value="2">Followers</option>
                                                      <option value="3">Friends</option>
                                                      <option value="4">Private</option>
                                                    </select>
                                                </div>
                                                <div class="col-lg-5">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                              <div class="col-lg-6 col-md-4 col-sm-4">
                                              </div>
                                              <div class="col-lg-3 col-md-4 col-sm-4">
                                                <button type="submit" class="btn">Submit</button>
                                              </div>

                                              <div class="col-lg-3 col-md-4 col-sm-4">
                                                <a href="/users/moment" class="btn">Cancel</a>
                                              </div>
                                            </div>
                                        </div>
                                    </form>
                                  </div>
                                </div>
                                <!-- End Facebook Status Box -->
                                
                                <!-- Recommended Moment -->
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                  <div class="col-md-6 col-sm-6 col-xs-6" id="frdMomentList" style="padding-left: 0">
                                  <% for(var i=0; i < moment.length; i++) {%>						
                                      <% if(i % 2 == 0) {%>
                							        <div class="post post1" id=<%= "othersMoment"+i %>>
                  								        <img class="img-responsive img-border img-full" src= <%= moment[i].pic %> alt="Moment Image" id="myMomentImg">                  								      
                  								        <div class="post-text">
                    								            <h2 class="post-title" id=<%="myMomentTitle"+i%>><%= moment[i].title %></h2>
                    								            <div class="post-meta">
                      									           By <a href="#"><%= moment[i].username %></a>  <%= "Posted on "+moment[i].date.getDate()+"/"+(moment[i].date.getMonth() +1)+"/"+moment[i].date.getFullYear()+" "+moment[i].date.getHours()+":"+(moment[i].date.getMinutes()<10?'0':'') + moment[i].date.getMinutes()%>
                    								            </div>
                                                <div class="moment-text">
                                                  <textarea name="newMomentText" id=<%="myMomentText"+i %> rows="5" cols="500" disabled><%= moment[i].text %></textarea>
                                                </div>
                  								        </div>
                							        </div>
                                      <% } %>
                                  <% } %>
                                  </div>
                            
                                  <div class="col-md-6 col-sm-6 col-xs-6" id="frdMomentList1" style="padding-right: 0">
                                  <% for(var i=0; i < moment.length; i++) {%>           
                                      <% if(i % 2 == 1) {%>
                                      <div class="post post2" id=<%= "othersMoment"+i %>>
                                          <img class="img-responsive img-border img-full" src= <%= moment[i].pic %> alt="Moment Image" id="myMomentImg">                                        
                                          <div class="post-text">
                                                <h2 class="post-title" id=<%="myMomentTitle"+i%>><%= moment[i].title %></h2>
                                                <div class="post-meta">
                                                   By <a href="#"><%= moment[i].username %></a>  <%= "Posted on "+moment[i].date.getDate()+"/"+(moment[i].date.getMonth() +1)+"/"+moment[i].date.getFullYear()+" "+moment[i].date.getHours()+":"+(moment[i].date.getMinutes()<10?'0':'') + moment[i].date.getMinutes()%>
                                                </div>
                                                <div class="moment-text">
                                                  <textarea name="newMomentText" id=<%="myMomentText"+i %> rows="5" cols="500" disabled><%= moment[i].text %></textarea>
                                                </div>

                                          </div>
                                      </div>
                                      <% } %>
                                  <% } %>
                                  </div>

                                </div>
                                <!-- End Recommended Moment -->

                                
                                <div class="col-md-12 col-sm-12 col-xs-12">
              						        <div class="more-moments">
              							         <a href="#" id="loadMore">Load More</a>
              						        </div>
            					         </div>

                        <div class="col-lg-1"></div>
                  </div>
      					</div>
    				</section>
     				<!--End  Blog List -->

            
            <%- include footer.ejs -%>
            


            </div>   
      	</div>



     </div>




<%- include backToTop.ejs -%>
</body>
</html>