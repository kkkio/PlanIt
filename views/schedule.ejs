<script>
var newID=1;//whenever create a new event, newID increase by 1
$(document).ready(function() {
  $("#h-btn1").hide();
  $("#h-btn2").hide();
  var evenNum=document.getElementById("eventNumber").value;// number of existing event
  var title=new Array();
  var startTime=new Array();
  var endTime=new Array();
  var Url=new Array();
  var id_Arr=new Array();
  // store all information to Array :title,start,end,url,and ID
  for(var i=0;i<evenNum;i++){
    title.push(document.getElementById("event_title"+i).value);
    startTime.push(document.getElementById("event_start"+i).value);
    endTime.push(document.getElementById("event_end"+i).value);
    Url.push(document.getElementById("event_url"+i).value);
    id_Arr.push(document.getElementById("event_id"+i).value);
  }


  $('#calendar').fullCalendar({
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'month,agendaWeek,agendaDay'
    },
    defaultDate: '2017-04-13',
    navLinks: true, // can click day/week names to navigate views
    selectable: true,
    selectHelper: true,
    //##################################     add new event  #########################################
    select: function(start, end) {

      var title = prompt('Event Title:');
      var eventData;
      if (title) {
        eventData = {
          title: title,
          start: start,
          end: end,
          id: newID
        };

        document.getElementById('newEvent_title').value=eventData.title;

        document.getElementById('newEvent_start').value=eventData.start;

        document.getElementById('newEvent_end').value=eventData.end;

        document.getElementById("newEvent_submit").submit();

        newID++;
        $('#calendar').fullCalendar('renderEvent', eventData, true); // stick? = true
      }
      $('#calendar').fullCalendar('unselect');
    },

    eventClick: function(event, element) {

        //$('#detailModal').modal('show');
        var update=confirm("Do you want to modify this event?");
        //#####################################       modify old event ##########################################
        if(update==true){
          var title=prompt("Please enter the title");
          event.title=title;
          var starting=prompt("Please enter its start time");
          event.start=starting;
          var ending=prompt("Please enter its end time");
          event.end=ending;
          document.getElementById("changeEvent_id").value=event.id;
          document.getElementById("changeEvent_title").value=event.title;
          document.getElementById("changeEvent_start").value=event.start;
          document.getElementById("changeEvent_end").value=event.end;
          //post the modified event
          document.getElementById("modify_submit").submit();
        }
        else{
          //#########################################  delete old event ###########################################
          var deleteE=confirm("Do you want to delete this event?");
          if(deleteE==1){
            $('#calendar').fullCalendar('removeEvents',event.id);
            document.getElementById("storeDelete").value=event.id;
            //post the deleted event
            document.getElementById("delete_submit").submit();
          }

        }


        $('#calendar').fullCalendar('updateEvent', event);

    },

    editable: true,
    eventLimit: true, // allow "more" link when too many events
    //for(var i=0;i<evenNum;i++)


  });



  //initialize all existing events in database

  for(var i=0;i<evenNum;i++){

      $('#calendar').fullCalendar('renderEvent', {title:title[i],start:startTime[i],end:endTime[i],id:id_Arr[i]}, true);

  }


});

</script>
