                    <% for (var i=0; i < moment.length; i++) { %>
                      <div class="post" id= <%= "myMoment"+i %> >
                        <% if(moment[i].pic) { %>
                          <img class="img-responsive img-border img-full" src= <%= moment[i].pic %> alt="MyMomentImage" id="myMomentImg">
                        <% } %>
                          <div class="post-text">
                              <h2 class="post-title" id=<%="myMomentTitle"+i%>><%= moment[i].title %></h2>
                              <div class="post-meta">
                                  By <a href="/users/account"><%= user.username %></a><text class="likes"><%= "Posted on "+moment[i].date.getDate()+"/"+(moment[i].date.getMonth() +1)+"/"+moment[i].date.getFullYear() %></text>
                              </div>
                              <div class="moment-text">
                                  <input type="hidden" id="tmpNewTextId" name="momentId" value="">
                                  <textarea name="newMomentText" id=<%="myMomentText"+i %> rows="5" cols="500" disabled><%= moment[i].text %></textarea>
                              </div>
                              <br>

                                  <div class="input-group moment-input-group">
                                      <div class="input-group-btn post-button">
                                          <a class="btn" data-toggle="modal" data-target="#updateModal" id=<%="editBtn"+i%> name=<%= moment[i]._id %>><i class="glyphicon glyphicon-edit post-edit"></i><strong class="post-edit-text">Re-edit</strong></a>
                                          <a class="btn" data-toggle="modal" data-target="#deleteModal" id=<%="deleteBtn"+i%> name=<%= moment[i]._id %>><i class="glyphicon glyphicon-trash post-delete"></i><strong class="post-delete-text">Delete</strong></a>
                                      </div>
                                  </div>

                              <div class="moment-comment"></div>
                          </div>
                      </div>
                    <% } %>


                  <div class="more-moments">
                      <a href="#" id="loadMore">Load More</a>
                  </div>


                </div>

                <!-- Delete Moment Modal -->
                <div class="modal fade" id="deleteModal" role="dialog">
                  <div class="modal-dialog modal-md">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4>Delete This Moment <i class="fa fa-trash-o"></i></h4>
                        </div>
                        <div class="modal-body" style="text-align: left;">
                          <i class="fa fa-question-circle"></i> Are you sure you want to delete this moment?
                        </div>
                        <div class="modal-footer">
                          <form method="post" id="deleteMomentForm" action="/users/account/deleteMoment">
                            <input type="hidden" id="tmpMomentId" name="momentId" value="">
                            <button type="submit" class="btn" id="confirmDeleteBtn" data-dismiss="modal">Confirm</button>
                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                          </form>
                        </div>
                    </div>
                  </div>
                </div>


                <!-- Update Moment Modal -->
                <div class="modal fade" id="updateModal" role="dialog">
                  <div class="modal-dialog modal-md">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4>Re-edit This Moment <i class="glyphicon glyphicon-edit post-edit" style="color:white"></i></h4>
                        </div>
                        <div class="modal-body" style="text-align: left;">
                          <input class="form-control" name="newMomentTitle" type="text" id="tmpMomentTitle" placeholder="Update your title here...">
                          <br>
                          <textarea class="form-control" name="newMomentText" type="text" id="tmpMomentText" cols="40" rows="5" style="width:100%" placeholder="Update your moment here..."></textarea>
                        </div>
                        <div class="modal-footer">
                          <form method="post" id="updateMomentForm" action="/users/account/updateMoment">
                            <input type="hidden" id="tmpMomentId2" name="momentId" value="">
                            <input type="hidden" id="updateTitle" name="updateMomentTitle" value="">
                            <input type="hidden" id="updateText" name="updateMomentText" value="">
                            <button type="submit" class="btn" id="confirmUpdateBtn" data-dismiss="modal">Confirm</button>
                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                          </form>
                        </div>
                    </div>
                  </div>
                </div>


                  <div class="col-lg-1"></div>
                </div>


            </div>
     	  <div class="row">
            <div class="col-lg-1"></div>
          	<div class="col-lg-10">
          		<hr class="footer-hr">
      		  </div>
            <div class="col-lg-1"></div>
    	  </div>
        </div>
       </div>

     <%- include footer.ejs -%>

    </div>
    <!-- /.container -->

   </div>


   <%- include backToTop.ejs -%>


</body>
</html>
